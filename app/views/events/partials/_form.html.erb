<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-10">
      <%= render "shared/errors", obj: @event %>
      <%= form_with(model: @event, class:"",local: true)  do |f| %>
      <%= f.hidden_field :created_by, value: current_user.id %>

        <div class="form-group row">
          <div class= "col-2">
            <%= f.label :title ,class: "col-form-label" %>
          </div>
          <div class= "col-10">
            <%= f.text_field :title, class:"form-control col-9" , placeholder: "Enter a title", required: true %>
          </div>
        </div>

        <div class="form-group row mt-2">
          <div class= "col-2">
            <%= f.label :description, class: "col-2 col-form-label" %>
          </div>
          <div class= "col-10">
            <%= f.text_area :description, class:"form-control col-10", placeholder: "Enter a description", required: true %>
          </div>
        </div>

        <div class="form-group row mt-2">
          <div class= "col-2">
            <%= f.label :status_id, class: "col-2 col-form-label" %>
          </div>
          <div class= "col-10">
            <%= f.select(
              :status_id,
              options_for_select( Status.all.collect {|a| [a.name, a.id]}, @event.status_id),
              {required: true, include_blank: true},
              {class: "form-control"}
            )%>
          </div>
        </div>

        <div class="form-group row mt-2">
          <div class= "col-2">
            <%= f.label :active_from, class: "col-2 col-form-label" %>
          </div>
          <div class= "col-10">
            <%= f.date_field :active_from, class: "w-25 form-control" %>
          </div>
        </div>

        <div class="form-group row mt-2">
          <div class= "col-2">
            <%= f.label :active_to, class: "col-2 col-form-label" %>
          </div>
          <div class= "col-10">
            <%= f.date_field :active_to, class: "w-25 form-control" %>
          </div>
        </div>

        <div class="form-group d-flex justify-content-center">
          <%= link_to 'Back', root_path, class: "btn btn-outline-secondary mx-2 btn-sm my-2" %>
          <% if @event.new_record? %>
            <%= f.submit("Create Event", class: "btn btn-outline-success btn-sm my-2") %>
          <% else %>
            <%= f.submit("Edit Event", class: "btn btn-outline-success btn-sm my-2") %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

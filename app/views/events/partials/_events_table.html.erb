<div class="row justify-content-center">
  <div class="col-10">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Description</th>
          <th scope="col">Status</th>
          <th scope="col">Active</th>
          <th scope="col">Active From</th>
          <th scope="col">Active To</th>
          <th scope="col">Resolved</th>
          <th scope="col">Created By</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% events.each do |event| %>
          <tr>
            <td><%= event.title %></td>
            <td><%= event.description %></td>
            <td class='<%= "col-2 bg-#{event.status_colour} bg-opacity-10 border border-#{event.status_colour} border rounded-end"%>'.html_safe><%= event.description %></td>
            <td><%= event.is_active? %></td>
            <td><%= event.active_from.to_date %></td>
            <td><%= event.active_to.to_date %></td>
            <td><%= event.is_resolved? %></td>
            <td><%= event.author %></td>
            <td>
              <%= link_to 'Show', event_path(event), class: "btn btn-outline-primary mx-2 btn-sm my-2" %>
              <%= link_to 'Edit', edit_event_path(event), class: "btn btn-outline-primary mx-2 btn-sm my-2" %>
              <%=  button_to 'Destroy', event_path(event), method: :delete,  data: {confirm: 'Are you sure?'}, class: "btn btn-outline-danger mx-2 btn-sm my-2" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
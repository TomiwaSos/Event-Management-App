<h1 class="text-center mt-4"> Active events </h1>

<div class="container">
    <div class="row justify-content-end">
      <%= link_to 'New Event', new_event_path, class: "btn btn-outline-primary mx-2 btn-sm my-2 col-1" %>
    </div>
    <%# temp line %>
    <div class="row justify-content-end">
      <%= link_to 'Status', statuses_path	, class: "btn btn-outline-primary mx-2 btn-sm my-2 col-1" %>
    </div>
  <div class="row justify-content-center">
    <div class="col-10">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Active From</th>
            <th scope="col">Active To</th>
            <th scope="col">Created By</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td><%= event.title %></td>
              <td><%= event.description %></td>
              <td><%= event.active_from %></td>
              <td><%= event.active_to %></td>
              <td><%= event.created_by %></td>
              <td>
                <%= link_to 'Show', event_path(event), class: "btn btn-outline-primary mx-2 btn-sm my-2" %>
                <%= link_to 'Edit', edit_event_path(event), class: "btn btn-outline-primary mx-2 btn-sm my-2" %>
                <%=  button_to 'Destroy', event_path(event), method: :delete,  data: {confirm: 'Are you sure?'}, class: "btn btn-outline-danger mx-2 btn-sm my-2" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
